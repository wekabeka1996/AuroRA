[flake8]
max-line-length = 120
# Use project-friendly ignores if needed later; start strict.
# E203: whitespace before ':' - conflicts with black formatter
# W503: line break before binary operator - conflicts with black formatter
# E704: multiple statements on one line (def) - conflicts with black formatting of Protocol methods with ellipsis
ignore = E203,W503,E704
# Exclude third-party, generated, and legacy archives from linting
exclude =
    .git,
    .venv,
    venv,
    env,
    __pycache__,
    build,
    dist,
    htmlcov,
    logs,
    reports,
    artifacts,
    datasets,
    data,
    runs,
    archive,
    tests/_archive
per-file-ignores =
    # Allow unused imports in __init__ packages for re-exports
    */__init__.py: F401
