# === TESTNET CONFIGURATION TEMPLATE ===
# Copy to .env.testnet.local and replace __REPLACE__ with real values

# Binance Testnet API credentials
BINANCE_API_KEY=__REPLACE__
BINANCE_API_SECRET=__REPLACE__

# Exchange configuration for testnet futures
EXCHANGE_ID=binanceusdm
EXCHANGE_TESTNET=true
EXCHANGE_USE_FUTURES=true
EXCHANGE_LEVERAGE=25
BINANCE_ENV=testnet

# Testnet endpoints
BINANCE_USDM_BASE_URL=https://testnet.binancefuture.com
BINANCE_USDM_WS_URL_TESTNET=wss://stream.binancefuture.com/ws/

# Aurora mode (testnet environment)
AURORA_MODE=testnet
DRY_RUN=false
AURORA_BASE_URL=http://127.0.0.1:8000

# Idempotency configuration
AURORA_IDEM_BACKEND=sqlite
AURORA_IDEM_SQLITE_PATH=data/idem.db
AURORA_IDEM_RETENTION_DAYS=7

# API security tokens (must be >=16 chars)
AURORA_API_TOKEN=testnet_token_123456789abcdef
AURORA_OPS_TOKEN=testnet_ops_token_123456789abcdef

# Risk management (testnet settings)
MAX_NOTIONAL_USD=1000.0
MIN_NOTIONAL_USD=50.0
TARGET_ALLOCATION_PCT=1.0
AURORA_MAX_CONCURRENT=1

# Pretrade configuration
PRETRADE_ORDER_PROFILE=er_before_slip
AURORA_PI_MIN_BPS=1.0
AURORA_SPREAD_MAX_BPS=50
AURORA_HTTP_TIMEOUT_MS=120
AURORA_SLIP_FRACTION=0.25

# Session configuration
AURORA_SESSION_DIR=logs/testnet_session
METRICS_PORT=9100
BINANCE_RECV_WINDOW=5000

# Configuration profile
AURORA_CONFIG_NAME=testnet.yaml
